# ---- Data source ----
# Use 'polygon' (recommended) or 'yahoo' (fallback)
DATA_SOURCE=polygon

# Polygon (recommended)
POLYGON_API_KEY=pk_your_polygon_key_here

# Yahoo fallback requires a CSV universe of tickers to scan
TICKERS_CSV=tickers_sample.csv

# ---- Filters ----
# Minimum gap percentage (negative number). Example: -5 means gap down of 5% or more.
MIN_GAP_PCT=-5

# Only used with Polygon (market cap in USD)
MIN_MARKET_CAP=3000000000

# Only used with Polygon (true/false)
ONLY_OPTIONABLE=false

# ---- Email (SendGrid) ----
EMAIL_TO=you@example.com
EMAIL_SUBJECT_PREFIX=[Gap Down]
